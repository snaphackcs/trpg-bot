{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "schema/schema",
    "type": "object",
    "properties": {
        "cards": {
            "type": [
                "array",
                "string"
            ],
            "pattern": ".*/cards.json"
        },
        "roles": {
            "type": [
                "array",
                "string"
            ],
            "pattern": ".*/roles.json"
        },
        "events": {
            "type": [
                "array",
                "string"
            ],
            "pattern": ".*/events.json"
        }
    },
    "required": [
        "cards",
        "roles",
        "events"
    ]
}